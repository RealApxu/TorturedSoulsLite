IF
	Clicked([ANYONE])
	!PartyHasItem("ttkeysil")
	Global("ttWaterAltar","GLOBAL",0)
	Range(LastTrigger,9)
THEN
	RESPONSE #100
		DisplayString(Myself,@242)
END

IF
	Clicked([ANYONE])
	PartyHasItem("ttkeysil")
	Global("ttWaterAltar","GLOBAL",0)
	Range(LastTrigger,9)
THEN
	RESPONSE #100
		SetGlobal("ttWaterAltar","GLOBAL",1)
		DestroyItem("ttkeysil")
		TakePartyItem("ttkeysil")
		GiveItemCreate("ttpot1a",Player1,0,0,0)
END

